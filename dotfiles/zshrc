# Initialize Zsh completion system
autoload -Uz compinit
compinit

export ANTIDOTE_HOME="${HOME}/.antidote"
# Load Antidote
source ${ANTIDOTE_HOME}/.antidote/antidote.zsh

# Initialize Antidote
antidote load

# Load Powerlevel10k
if [[ -f ${HOME}/.antidote/powerlevel10k/powerlevel10k.zsh-theme ]]; then
    source ${HOME}/.antidote/powerlevel10k/powerlevel10k.zsh-theme
elif [[ -f ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k/powerlevel10k.zsh-theme ]]; then
    source ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k/powerlevel10k.zsh-theme
fi

# Source shared configuration
[[ -f ~/.shellrc ]] && source ~/.shellrc

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Autojump
[[ -s /usr/share/autojump/autojump.zsh ]] && source /usr/share/autojump/autojump.zsh

# Set PATH
export PATH="$HOME/.local/bin:$PATH"

# Zsh settings
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory