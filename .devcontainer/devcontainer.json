{
  "name": "Envoy Config Schema Dev Container",
  "overrideCommand": false,
  "image": "ghcr.io/patchpatrol/envoy-config-schema:latest",
  "runArgs": [
    "--env=SSH_AUTH_SOCK=/ssh-agent"
  ],
  "forwardPorts": [],
  "postCreateCommand": "./setup-dev-environment.sh",
  "remoteUser": "developer",
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent",
    "AUTO_SETUP": "false"
  },
  "mounts": [
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}