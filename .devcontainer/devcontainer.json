{
  "name": "Envoy Config Schema Dev Container",
  "image": "ghcr.io/patchpatrol/envoy-config-schema:latest",
  "runArgs": [
    "--env=SSH_AUTH_SOCK=/ssh-agent",
    "--hostname=envoy-config-dev"
  ],
  "overrideCommand": false,
  "remoteUser": "developer",
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent",
    "AUTO_SETUP": "false",
    "PROJECT_ROOT": "/home/developer/Developer/src/envoy-config-schema",
    "SETUP_ZSH": "false",
    "SHELL": "${localEnv:SHELL}"
  },
  "mounts": [
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "golang.go",
        "zxh404.vscode-proto3",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "/home/developer/setup-dev-environment.sh"
}