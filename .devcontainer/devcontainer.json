{
  "name": "Envoy Config Schema Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "SSH_AUTH_SOCK": "/ssh-agent"
    }
  },
  "runArgs": [
    "--volume=${env:SSH_AUTH_SOCK}:/ssh-agent",
    "--env=SSH_AUTH_SOCK=/ssh-agent"
  ],
  "forwardPorts": [],
  "postCreateCommand": "git config --global --add safe.directory /workspaces/envoy-config-schema && make install-deps && make generate-json-schema",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "zxh404.vscode-proto3",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}